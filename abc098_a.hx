import haxe.io.Input;

class Main {
    static function main() {
        var input:Input = Sys.stdin();
        var ab:Array<Int> = input.readLine().split(' ').map(function (t:String) return Std.parseInt(t));
        var a:Int = ab[0];
        var b:Int = ab[1];
        var c0:Int = a-b;
        var c1:Int = a+b;
        var c2:Int = a*b;
        var ans = c0 > c1 ? (c0 > c2 ? c0 : c2) : (c1 > c2 ? c1 : c2);
        Sys.println(ans);
    }
}
