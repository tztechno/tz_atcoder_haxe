class Main {
    static function main() {
        var input:Input = Sys.stdin();
        var A = [for( t in input.readLine().split(' ') ) Std.parseInt(t)];
        var n = A[0];
        var ans = Math.floor(n/2)*Math.floor((n+1)/2);
        Sys.println(ans);
    }
